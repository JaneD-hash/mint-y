<?xml version="1.0" encoding="UTF-8"?>
<!--
  Gruvbox Dark Theme for Xed Text Editor
  Based on the original Gruvbox colorscheme by morhetz
  Compatible with GtkSourceView 3.0 and 4.x
-->
<style-scheme id="gruvbox-dark" name="Gruvbox Dark" version="1.0">
  <author>Pavel Pertsev, morhetz</author>
  <description>Dark theme based on the Gruvbox colorscheme</description>

  <!-- Gruvbox Color Palette -->
  <color name="bg0"          value="#282828"/>
  <color name="bg1"          value="#3c3836"/>
  <color name="bg2"          value="#504945"/>
  <color name="bg3"          value="#665c54"/>
  <color name="bg4"          value="#7c6f64"/>
  
  <color name="fg0"          value="#fbf1c7"/>
  <color name="fg1"          value="#ebdbb2"/>
  <color name="fg2"          value="#d5c4a1"/>
  <color name="fg3"          value="#bdae93"/>
  <color name="fg4"          value="#a89984"/>
  
  <color name="red"          value="#cc241d"/>
  <color name="green"        value="#98971a"/>
  <color name="yellow"       value="#d79921"/>
  <color name="blue"         value="#458588"/>
  <color name="purple"       value="#b16286"/>
  <color name="aqua"         value="#689d6a"/>
  <color name="orange"       value="#d65d0e"/>
  
  <color name="bright_red"   value="#fb4934"/>
  <color name="bright_green" value="#b8bb26"/>
  <color name="bright_yellow" value="#fabd2f"/>
  <color name="bright_blue"  value="#83a598"/>
  <color name="bright_purple" value="#d3869b"/>
  <color name="bright_aqua"  value="#8ec07c"/>
  <color name="bright_orange" value="#fe8019"/>
  
  <color name="gray"         value="#928374"/>

  <!-- Global Settings -->
  <style name="text"                      foreground="fg1" background="bg0"/>
  <style name="selection"                 background="bg2" foreground="fg0"/>
  <style name="cursor"                    foreground="fg0"/>
  <style name="secondary-cursor"          foreground="fg2"/>
  <style name="current-line"              background="bg1"/>
  <style name="line-numbers"              foreground="bg4" background="bg0"/>
  <style name="current-line-number"       foreground="yellow" background="bg1" bold="true"/>
  <style name="draw-spaces"               foreground="bg3"/>
  <style name="right-margin"              foreground="bg2" background="bg1"/>
  <style name="background-pattern"        background="bg0"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"             foreground="fg0" background="bg3" bold="true"/>
  <style name="bracket-mismatch"          foreground="bright_red" background="bg1" bold="true"/>

  <!-- Search -->
  <style name="search-match"              foreground="bg0" background="bright_yellow"/>

  <!-- Bookmarks -->
  <style name="bookmark"                  background="bg2"/>

  <!-- Comments -->
  <style name="def:comment"               foreground="gray" italic="true"/>
  <style name="def:shebang"               foreground="gray" italic="true"/>
  <style name="def:doc-comment-element"   foreground="gray" italic="true"/>

  <!-- Constants -->
  <style name="def:constant"              foreground="purple"/>
  <style name="def:decimal"               foreground="purple"/>
  <style name="def:base-n-integer"        foreground="purple"/>
  <style name="def:floating-point"        foreground="purple"/>
  <style name="def:complex"               foreground="purple"/>
  <style name="def:character"             foreground="purple"/>
  <style name="def:string"                foreground="bright_green"/>
  <style name="def:special-char"          foreground="bright_red"/>
  <style name="def:builtin"               foreground="orange"/>
  <style name="def:boolean"               foreground="purple"/>

  <!-- Identifiers -->
  <style name="def:identifier"            foreground="blue"/>
  <style name="def:function"              foreground="bright_green" bold="true"/>

  <!-- Statements -->
  <style name="def:statement"             foreground="red" bold="true"/>
  <style name="def:keyword"               foreground="red" bold="true"/>
  <style name="def:operator"              foreground="fg1"/>
  <style name="def:exception"             foreground="red" bold="true"/>

  <!-- Types -->
  <style name="def:type"                  foreground="bright_yellow"/>
  <style name="def:reserved"              foreground="blue" bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"              italic="true"/>
  <style name="def:strong-emphasis"       bold="true"/>
  <style name="def:inline-code"           foreground="purple"/>
  <style name="def:insertion"             underline="single"/>
  <style name="def:deletion"              strikethrough="true"/>
  <style name="def:link-text"             foreground="blue"/>
  <style name="def:link-symbol"           foreground="blue" bold="true"/>
  <style name="def:link-destination"      foreground="bright_blue" italic="true"/>
  <style name="def:heading"               foreground="bright_green" bold="true"/>
  <style name="def:thematic-break"        foreground="bright_green" bold="true"/>
  <style name="def:preformatted-section"  foreground="purple"/>
  <style name="def:list-marker"           foreground="bright_green" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"          foreground="aqua"/>
  <style name="def:error"                 foreground="bright_red" bold="true" underline="single"/>
  <style name="def:warning"               foreground="bright_yellow" bold="true"/>
  <style name="def:note"                  foreground="blue" bold="true"/>
  <style name="def:net-address-in-comment" foreground="purple" italic="true" underline="single"/>
  <style name="def:underlined"            underline="single"/>

  <!-- Language specific -->
  
  <!-- HTML/XML -->
  <style name="html:tag"                  foreground="blue" bold="true"/>
  <style name="html:attribute-name"       foreground="aqua"/>
  <style name="html:attribute-value"      foreground="bright_green"/>
  <style name="html:dtd"                  foreground="purple"/>
  <style name="xml:element-name"          foreground="blue" bold="true"/>
  <style name="xml:attribute-name"        foreground="aqua"/>
  <style name="xml:attribute-value"       foreground="bright_green"/>
  <style name="xml:processing-instruction" foreground="purple" bold="true"/>
  <style name="xml:cdata"                 foreground="purple"/>

  <!-- CSS -->
  <style name="css:keyword"               foreground="purple"/>
  <style name="css:selector-id"           foreground="bright_blue"/>
  <style name="css:selector-class"        foreground="bright_blue"/>
  <style name="css:selector-pseudoclass"  foreground="bright_blue"/>
  <style name="css:property-name"         foreground="aqua"/>
  <style name="css:property-value"        foreground="bright_green"/>
  <style name="css:color"                 foreground="purple"/>
  <style name="css:unit"                  foreground="orange"/>

  <!-- JavaScript -->
  <style name="js:keyword"                foreground="red" bold="true"/>
  <style name="js:function"               foreground="bright_green" bold="true"/>
  <style name="js:object"                 foreground="blue"/>
  <style name="js:prototype"              foreground="blue"/>
  <style name="js:regex"                  foreground="bright_red"/>

  <!-- Python -->
  <style name="python:keyword"            foreground="red" bold="true"/>
  <style name="python:builtin-function"   foreground="orange"/>
  <style name="python:builtin-object"     foreground="orange"/>
  <style name="python:builtin-constant"   foreground="purple"/>
  <style name="python:string-format"      foreground="bright_aqua"/>

  <!-- C/C++ -->
  <style name="c:keyword"                 foreground="red" bold="true"/>
  <style name="c:type"                    foreground="bright_yellow"/>
  <style name="c:storage-class"           foreground="orange"/>
  <style name="c:preprocessor"            foreground="aqua"/>
  <style name="c:included-file"           foreground="bright_green"/>
  <style name="c:common-defines"          foreground="purple"/>

  <!-- Shell/Bash -->
  <style name="sh:keyword"                foreground="red" bold="true"/>
  <style name="sh:variable"               foreground="blue"/>
  <style name="sh:variable-definition"    foreground="bright_blue"/>
  <style name="sh:function"               foreground="bright_green"/>
  <style name="sh:here-doc-bound"         foreground="purple" bold="true"/>

  <!-- Diff -->
  <style name="diff:added-line"           foreground="bright_green"/>
  <style name="diff:removed-line"         foreground="bright_red"/>
  <style name="diff:changed-line"         foreground="bright_blue"/>
  <style name="diff:special-case"         foreground="purple"/>
  <style name="diff:location"             foreground="bright_yellow"/>

</style-scheme>
